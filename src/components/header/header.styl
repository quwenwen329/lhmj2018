@import "../config.styl"
.header
  position relative
  .banner
    width 100%
    height 490px
    background-size cover
    background-position:center center
    background-image url("banner.png")
  .nav-wapper
    position absolute
    top 0
    left 0
    width 100%
    color white
    height 54px
    background-color #222C3B
    .nav
      Context()
      display flex
      .left
        display flex
        height 50px
        margin-right 142px
        background-color #222C3B
        .line
          height 20px
          margin 15px 30px
          border-right 2px white solid
        .logo1
          width 117px
          height 50px
          background-repeat no-repeat
          background-position center center
          background-image url("logo1.png")
        .logo2
          width 154px
          height 50px
          background-repeat no-repeat
          background-position center center
          background-image url("logo2.png")
      .right
        height 54px
        line-height 54px
        background-color #222C3B
