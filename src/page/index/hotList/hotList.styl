@import "../../../components/config.styl"

.hot-list
  Context()
  padding-top 50px
  padding-bottom 80px
  .title-wapper
    text-align center
    .title
      image('title.png', 796px, 49px)
  .list
    margin auto
    display flex
    justify-content space-between
    margin-top 65px
    .item
      image('frame.png', 199px, 259px)
      text-align center
      .title
        margin-top 33px
        text-align center
        font-size 24px
        font-weight bold
        letter-spacing 4px
        background linear-gradient(#434343, #8b8b8b 50%, #000000)
        text-linear-gradient()
        text-shadow 2px 2px 2px rgba(0,0,0,.18)
      .text
        margin-top 11px
        font-size 20px
        font-weight bold
        color #e63636
        &.down
          color #24a92d
      .icon
        margin auto
        margin-top 10px
        w = 85px
        width w
        height w
      .military-rank
        margin-top 5px
        color #e63636
      .ID
        margin-top 5px
        color #003333
        text-over(1)
