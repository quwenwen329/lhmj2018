@import "../../../components/config.styl"

.news-wapper
  Context()
  padding-bottom 70px
  .title-wapper
    text-align center
    .title
      image('title.png', 796px, 49px)
  .info-wapper
    h = 45px
    height h
    line-height h
    font-size 14px
    .more
      float right
  .news
    image('frame.png', 1160px, 339px)
    display flex
    .item
      flex 1
      display flex
      margin 0 25px
      padding-top 76px
      .pic
        flex-shrink 0
        width 152px
        height 201px
        background-color #008800
        border 1px solid #8ab8ff
        //todo 缺——间隙数据
        margin-right 15px
      .info
        .title
          font-size 14px
          font-weight bold
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 2
          -webkit-box-orient vertical
        .date
          font-size 12px
          color #8c8c8c
          margin-top 7px
          margin-bottom 19px
        .text
          font-size 12px
          font-weight bold
          color #333333
          line-height 16px
          overflow hidden
          text-overflow ellipsis
          display -webkit-box
          -webkit-line-clamp 7
          -webkit-box-orient vertical
        .more
          a
            font-size 12px
            color #1e75c6
